--display the database in entirety 
SELECT * FROM clothing;

--in descending order the items ranked 7 and above in popularity  
SELECT * FROM clothing WHERE popularity >=7 ORDER BY popularity desc;

--ordered by color and sum amount of each in ascending order
SELECT color, SUM(quantity) FROM clothing GROUP BY color ORDER BY SUM(quantity) asc;

--ordered by size and sum amount of each in descending order
SELECT size, SUM(quantity) FROM clothing GROUP BY size 
ORDER BY size desc;
